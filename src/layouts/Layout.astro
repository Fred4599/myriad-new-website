---
interface Props {
  title?: string;
  description?: string;
}
const { title = 'Myriad â€“ Community Card', description = 'Local marketing made simple. Reach every mailbox in your community.' } = Astro.props;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" href="/myriad-logo.png" />
    <link rel="icon" type="image/png" href="/myriad-logo.png" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="/myriad-logo.png" />
    <meta property="og:type" content="website" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  </head>
  <body>
    <slot />
    <script src="/scripts/animations.js" defer></script>
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>
