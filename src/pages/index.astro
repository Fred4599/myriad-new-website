  { title: 'MEGA Magnets', titleAllCaps: false, description: 'Put your shared message on an ad that ends up in the most high-traffic room in every home—on the kitchen refrigerator for years to come.', icon: 'magnet' },
  { title: 'Custom Apparel', titleAllCaps: false, description: 'Shirts, hats, hoodies, koozies, collectibles and giveaways with your brand/logo at the best prices guaranteed.', icon: 'shirt' },
