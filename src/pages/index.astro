const customerJourneySteps = [
  { step: '01', label: 'SUSPECT', description: "If you're reading this, you're a SUSPECT. You're a small business owner in the market that we service.", icon: 'users' },
  { step: '02', label: 'PROSPECT', description: 'If you decide to set up a 15 minute meeting, we consider you a PROSPECTIVE customer.', icon: 'search' },
  { step: '03', label: 'CUSTOMER', description: 'If you decide to try one of our "myriad" of products/services, you become a CUSTOMER.', icon: 'shield' },
  { step: '04', label: 'CLIENT', description: "Once one of these products and our services work for you, you'll witness firsthand our extensive follow-through system (referrals, five-star reviews, networking, community).", icon: 'star' },
];

// Hero carousel: photos from Myriad Photos folder (public/myriad-photos/)
const heroCarouselImages = [
  '/myriad-photos/IMG_2804.png',
  '/myriad-photos/IMG_4727.png',
  '/myriad-photos/IMG_5717-1.png',
  '/myriad-photos/IMG_6269.jpeg',
  '/myriad-photos/IMG_7484.png',
