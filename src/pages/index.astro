  <style>
    .hero-text { opacity: 0; animation: heroFadeIn 0.8s cubic-bezier(0.22, 1, 0.36, 1) forwards; }
    @keyframes heroFadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }
    .floating-cta { animation: float-cta 2s ease-in-out infinite; }
    @keyframes float-cta {
      0%, 100% { transform: scale(1); }
      50% { transform: scale(1.05); }
    }
    /* Hero: horizontal stack – 3 cards with depth; left/right recessed and tilted */
    .hero-carousel-horizontal { position: relative; perspective: 1200px; transform-style: preserve-3d; }
    .hero-carousel-horizontal .hero-slide {
      position: absolute; left: 50%; top: 0; width: 100%; height: 100%;
      transition: transform 0.5s cubic-bezier(0.22, 1, 0.36, 1), opacity 0.5s ease, filter 0.5s ease, width 0.5s ease, box-shadow 0.5s ease;
      z-index: 1; pointer-events: none;
      border-radius: 1rem; overflow: hidden;
      box-shadow: 0 8px 24px rgba(0,0,0,0.35);
      transform-style: preserve-3d;
    }
    /* Off (not left/center/right) */
    .hero-carousel-horizontal .hero-slide { transform: translateX(40%) scale(0.88); opacity: 0.15; filter: blur(6px); }
    /* Previous: clear strip on left (~25% visible), light blur so it reads as “behind” */
    /* Left: half visible, recessed (translateZ), slant + rotateY for depth */
    .hero-carousel-horizontal .hero-slide.hero-pos-left {
      z-index: 1;
      transform: translateX(-100%) translateZ(-50px) scale(0.96) rotate(-5deg) rotateY(8deg);
      opacity: 0.6; filter: blur(8px);
      box-shadow: 0 12px 40px rgba(0,0,0,0.45), 0 4px 16px rgba(0,0,0,0.35);
    }
    /* Center: featured slide, narrower so left/right peers show; on top, sharp */
    .hero-carousel-horizontal .hero-slide.hero-pos-center {
      width: 72%;
      z-index: 3; pointer-events: auto;
      transform: translateX(-50%) scale(1);
      opacity: 1; filter: blur(0);
      box-shadow: 0 20px 56px rgba(0,0,0,0.45);
    }
    /* Next: most of card visible on right (~85% peek) */
    /* Right: half visible, recessed (translateZ), slant + rotateY for depth */
    .hero-carousel-horizontal .hero-slide.hero-pos-right {
      z-index: 2;
      transform: translateX(0%) translateZ(-50px) scale(0.96) rotate(5deg) rotateY(-8deg);
      opacity: 0.6; filter: blur(8px);
      box-shadow: 0 12px 40px rgba(0,0,0,0.45), 0 4px 16px rgba(0,0,0,0.35);
    }
    .hero-carousel-horizontal .hero-slide.hero-slide-pop {
      animation: hero-slide-pop 0.4s ease-in-out forwards;
    }
    @keyframes hero-slide-pop {
      0% { transform: translateX(-50%) scale(1) translateY(0); }
      50% { transform: translateX(-50%) scale(1.02) translateY(-24px); }
      100% { transform: translateX(-50%) scale(1) translateY(0); }
    }
    .hero-dots { display: flex; justify-content: center; gap: 0.5rem; margin-top: 1rem; }
    .hero-dot { width: 0.5rem; height: 0.5rem; border-radius: 50%; border: 2px solid hsl(var(--muted-foreground) / 0.5); background: transparent; cursor: pointer; padding: 0; transition: background 0.2s, border-color 0.2s, transform 0.2s; }
    .hero-dot:hover { border-color: hsl(var(--primary)); background: hsl(var(--primary) / 0.3); transform: scale(1.2); }
    .hero-dot[aria-current="true"] { background: hsl(var(--primary)); border-color: hsl(var(--primary)); }
    .sr-only { position: absolute; width: 1px; height: 1px; padding: 0; margin: -1px; overflow: hidden; clip: rect(0,0,0,0); white-space: nowrap; border: 0; }
  </style>

  <script>
    (function heroCarousel() {
      var carousel = document.getElementById('hero-carousel');
      var dotsContainer = document.getElementById('hero-carousel-dots');
      if (!carousel || !dotsContainer) return;
      var slides = Array.prototype.slice.call(carousel.querySelectorAll('.hero-slide'));
      var dots = Array.prototype.slice.call(dotsContainer.querySelectorAll('.hero-dot'));
      var total = slides.length;
      if (total === 0 || total !== dots.length) return;
      var currentIndex = 0;
      var ADVANCE_MS = 5000;

      function applyStack() {
        var leftIdx = (currentIndex - 1 + total) % total;
        var rightIdx = (currentIndex + 1) % total;
        slides.forEach(function (s, i) {
          s.classList.remove('hero-pos-left', 'hero-pos-center', 'hero-pos-right', 'hero-slide-pop');
          if (i === leftIdx) s.classList.add('hero-pos-left');
          else if (i === currentIndex) s.classList.add('hero-pos-center');
          else if (i === rightIdx) s.classList.add('hero-pos-right');
          s.setAttribute('aria-hidden', i !== currentIndex);
        });
        dots.forEach(function (d, i) {
          if (i === currentIndex) d.setAttribute('aria-current', 'true');
          else d.removeAttribute('aria-current');
        });
      }

      function goTo(index) {
        var nextIndex = (index + total) % total;
        if (nextIndex === currentIndex) return;
        currentIndex = nextIndex;
        applyStack();
        var activeSlide = slides[currentIndex];
        activeSlide.classList.add('hero-slide-pop');
        activeSlide.addEventListener('animationend', function removePop() {
          activeSlide.removeEventListener('animationend', removePop);
          activeSlide.classList.remove('hero-slide-pop');
        });
      }

      applyStack();
      dots.forEach(function (dot, i) {
        dot.addEventListener('click', function () { goTo(i); });
      });
      setInterval(function () { goTo(currentIndex + 1); }, ADVANCE_MS);
    })();
  </script>
