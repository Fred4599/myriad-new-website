  { title: 'Cash Register Receipt Tape Coupons', titleAllCaps: false, description: 'Trackable coupons given to 20,000+ shoppers each and every month at the local grocery stores of your choice.', icon: 'receipt' },
  { title: 'Shopping Cart Advertising', titleAllCaps: false, description: 'Brand-building top-of-mind mini billboards in stores that have 15,000+ monthly shoppers.', icon: 'shopping-cart' },
  { title: 'Geofencing', titleAllCaps: false, description: 'Make sure every time a potential customer searches for &#9001; your industry &#9002; near me (e.g. restaurant near me, hairdresser near me, car repair near me), your business is at the top of a hyper local search.', icon: 'map-pin' },
