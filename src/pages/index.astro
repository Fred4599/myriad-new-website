      var expandedBusinesses = document.getElementById('expanded-group-businesses');
      var closeBtn = document.getElementById('close-expanded-group');
      var currentOpenIndex = -1;

      if (!expandedPanel || !expandedTitle || !expandedBusinesses || !closeBtn) return;

      function closePanel() {
        expandedPanel.classList.add('hidden');
        expandedPanel.classList.remove('business-group-expanded-open');
        expandedPanel.setAttribute('aria-hidden', 'true');
        cards.forEach(function(card) {
          card.setAttribute('aria-expanded', 'false');
          card.classList.remove('business-group-card-active');
        });
        currentOpenIndex = -1;
      }

      function openGroup(index) {
        var group = businessGroupsData[index];
        if (!group) return;

        if (currentOpenIndex === index) {
          closePanel();
          return;
        }

        expandedTitle.textContent = group.name;
        expandedBusinesses.innerHTML = group.businesses.map(function(biz) {
