const testimonials = [
  { quote: "We've tried Facebook ads, Google ads, everything. Nothing brings in local customers like the Community Card. Our phone rings every time it goes out!", author: 'Maria S.' },
  { quote: "The design team made our ad look incredible. We've been on the card for 6 months now and it's become our #1 source of new clients.", author: 'James T.' },
  { quote: "As a new salon in the area, this was perfect for getting our name out there. The value is unbeatable for the exposure we get.", author: 'Ashley M.' },
];

const businessCategories = ['Local restaurant', 'Hair studio', 'Landscaping', 'Dental', 'Home services', 'Remodeling', 'Fitness', 'Spas', 'Real estate', 'Mortgage', 'Banking', 'Junk removal'];

const serviceAreas = ['Shakopee', 'Prior Lake', 'Chaska', 'Savage', 'Chanhassen', 'Eden Prairie', 'Burnsville', 'Jordan', 'Carver', 'Victoria', 'Credit River'];

const faqItems = [
  { question: 'Sounds too good to be true…', answer: 'Answer to be provided by client.' },
  { question: 'I do most of this myself already', answer: 'Answer to be provided by client.' },
  { question: 'How can you guarantee results?', answer: 'Answer to be provided by client.' },
  { question: 'How long have you been doing this?', answer: 'Answer to be provided by client.' },
  { question: 'Can I do this on an a la carte approach?', answer: 'Answer to be provided by client.' },
  { question: 'Who else can I talk to that also did this?', answer: 'Answer to be provided by client.' },
