  <script>
    (function heroCarousel() {
      var carousel = document.getElementById('hero-carousel');
      var dotsContainer = document.getElementById('hero-carousel-dots');
      if (!carousel || !dotsContainer) return;
      var slides = Array.prototype.slice.call(carousel.querySelectorAll('.hero-slide'));
      var dots = Array.prototype.slice.call(dotsContainer.querySelectorAll('.hero-dot'));
      var total = slides.length;
      if (total === 0 || total !== dots.length) return;
      var currentIndex = 0;
      var ADVANCE_MS = 5000;

      function applyStack() {
        var leftIdx = (currentIndex - 1 + total) % total;
        var rightIdx = (currentIndex + 1) % total;
        slides.forEach(function (s, i) {
          s.classList.remove('hero-pos-left', 'hero-pos-center', 'hero-pos-right', 'hero-slide-pop');
          if (i === leftIdx) s.classList.add('hero-pos-left');
          else if (i === currentIndex) s.classList.add('hero-pos-center');
          else if (i === rightIdx) s.classList.add('hero-pos-right');
          s.setAttribute('aria-hidden', i !== currentIndex);
        });
        dots.forEach(function (d, i) {
          if (i === currentIndex) d.setAttribute('aria-current', 'true');
          else d.removeAttribute('aria-current');
        });
      }

      function goTo(index) {
        var nextIndex = (index + total) % total;
        if (nextIndex === currentIndex) return;
        currentIndex = nextIndex;
        applyStack();
        var activeSlide = slides[currentIndex];
        activeSlide.classList.add('hero-slide-pop');
        activeSlide.addEventListener('animationend', function removePop() {
          activeSlide.removeEventListener('animationend', removePop);
          activeSlide.classList.remove('hero-slide-pop');
        });
      }

      applyStack();
      dots.forEach(function (dot, i) {
        dot.addEventListener('click', function () { goTo(i); });
      });
      setInterval(function () { goTo(currentIndex + 1); }, ADVANCE_MS);
    })();

    // Geofencing billboard flip animation
    (function geoFlipper() {
      var flipper = document.getElementById('geo-flipper');
      if (!flipper) return;
      var terms = Array.prototype.slice.call(flipper.querySelectorAll('.geo-term'));
      var total = terms.length;
      if (total === 0) return;
      var currentIndex = 0;
      var FLIP_MS = 2500;

      function flip() {
        var current = terms[currentIndex];
        var nextIndex = (currentIndex + 1) % total;
        var next = terms[nextIndex];
        
        current.classList.remove('active');
        current.classList.add('exit');
        
        setTimeout(function() {
          current.classList.remove('exit');
        }, 400);
        
        next.classList.add('active');
        currentIndex = nextIndex;
      }

      setInterval(flip, FLIP_MS);
    })();

