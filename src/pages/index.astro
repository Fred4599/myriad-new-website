        }).join('');

        expandedPanel.classList.remove('hidden');
        expandedPanel.setAttribute('aria-hidden', 'false');
        
        setTimeout(function() {
          expandedPanel.classList.add('business-group-expanded-open');
        }, 10);

        cards.forEach(function(card, i) {
          if (i === index) {
            card.setAttribute('aria-expanded', 'true');
            card.classList.add('business-group-card-active');
          } else {
            card.setAttribute('aria-expanded', 'false');
            card.classList.remove('business-group-card-active');
          }
        });

        currentOpenIndex = index;

        expandedPanel.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
      }

      cards.forEach(function(card, index) {
        card.addEventListener('click', function() {
          openGroup(index);
        });
      });

      closeBtn.addEventListener('click', closePanel);
